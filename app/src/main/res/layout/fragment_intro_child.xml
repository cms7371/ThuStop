<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".intro.IntroChildFragment">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.43">

            <com.thustop_00.widgets.NotoTextView
                android:id="@+id/tv_intro_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/iv_intro_page"
                app:notoTextStyle="bold"

                android:bufferType="spannable"
                android:textColor="#423f3f"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/tv_intro_page3" />

            <ImageView
                android:id="@+id/iv_intro_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_intro_page"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/img_intro3"/>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
