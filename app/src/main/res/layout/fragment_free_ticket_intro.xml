<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.gtomato.android.ui.widget.CarouselView
            android:id="@+id/cv_free_tickets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_free_ticket_green" />

        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_test_free"
            android:layout_width="186dp"
            android:layout_height="288dp"
            android:background="@drawable/bg_free_ticket_green"
            android:text="한번 끌어 보거라"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_current_offset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/tv_test_free"
            app:layout_constraintEnd_toEndOf="@+id/tv_test_free"
            app:layout_constraintStart_toStartOf="@+id/tv_test_free" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>