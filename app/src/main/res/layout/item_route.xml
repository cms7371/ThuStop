<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:paddingBottom="11dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_outline_gray_fa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_mrv_route_line"
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_mrv_bus"
            app:srcCompat="@drawable/ic_route_line" />

        <ImageView
            android:id="@+id/iv_mrv_bus"
            android:layout_width="13dp"
            android:layout_height="14dp"
            app:layout_constraintEnd_toStartOf="@id/iv_mrv_route_line"
            app:layout_constraintTop_toTopOf="@id/tv_mrv_code"
            app:layout_constraintBottom_toBottomOf="@id/tv_mrv_code"
            app:srcCompat="@drawable/ic_bus_green" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:text="A15"
            android:textColor="#171d33"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/iv_mrv_bus"
            app:layout_constraintTop_toTopOf="parent"
            app:notoTextStyle="medium" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="10/16"
            android:textColor="#b4b4b4"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_mrv_state"
            app:layout_constraintStart_toEndOf="@id/tv_mrv_state"
            app:layout_constraintTop_toTopOf="@id/tv_mrv_state"
            app:notoTextStyle="medium" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_time_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="3dp"
            android:text="7:15"
            android:textColor="@color/TextBlack"
            android:textSize="9sp"
            app:layout_constraintEnd_toStartOf="@id/iv_mrv_route_line"
            app:layout_constraintTop_toTopOf="@id/iv_mrv_route_line"
            app:notoTextStyle="regular" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_departure1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:maxLines="2"
            android:text="수원역"
            android:textColor="@color/TextBlack"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/iv_mrv_route_line"
            app:layout_constraintTop_toTopOf="@id/iv_mrv_route_line"
            app:notoTextStyle="bold" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_departure2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:maxLines="2"
            android:text="우만4단지"
            android:textColor="@color/TextBlack"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/tv_mrv_departure1"
            app:layout_constraintTop_toTopOf="@id/iv_mrv_route_line"
            app:notoTextStyle="regular" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_departure3"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:maxLines="2"
            android:text="경기대후문"
            android:textColor="@color/TextBlack"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/tv_mrv_departure1"
            app:layout_constraintTop_toTopOf="@id/iv_mrv_route_line"
            app:notoTextStyle="regular" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_time_arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="9dp"
            android:text="7:15"
            android:textColor="@color/TextBlack"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="@id/iv_mrv_route_line"
            app:layout_constraintTop_toTopOf="@id/iv_mrv_route_line"
            app:notoTextStyle="regular" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_destination3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:maxLines="2"
            android:text="미사강변도시\n리버스위트칸타빌.리슈빌"
            android:textColor="@color/TextBlack"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/iv_mrv_route_line"
            app:layout_constraintTop_toTopOf="@id/iv_mrv_route_line"
            app:notoTextStyle="bold" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_destination2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:maxLines="2"
            android:text="잠실역2번출구"
            android:textColor="@color/TextBlack"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/tv_mrv_destination3"
            app:layout_constraintTop_toTopOf="@id/iv_mrv_route_line"
            app:notoTextStyle="regular" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_destination1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:maxLines="2"
            android:text="판교 테크노벨리"
            android:textColor="@color/TextBlack"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/tv_mrv_destination3"
            app:layout_constraintTop_toTopOf="@id/iv_mrv_route_line"
            app:notoTextStyle="regular" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:width="37dp"
            android:height="16dp"
            android:background="@drawable/bg_round12_green"
            android:gravity="center"
            android:text="운행중"
            android:textColor="@color/White"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_mrv_code"
            app:layout_constraintStart_toEndOf="@id/tv_mrv_code"
            app:layout_constraintTop_toTopOf="@id/tv_mrv_code"
            app:notoTextStyle="regular"
            tools:ignore="SmallSp" />

        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="월요일-금요일"
            android:textColor="@color/TextBlack"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_mrv_running"
            app:layout_constraintEnd_toStartOf="@id/tv_mrv_running"
            app:notoTextStyle="bold" />



        <com.thustop.thestop.widgets.NotoTextView
            android:id="@+id/tv_mrv_running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:text="운행"
            android:textColor="@color/TextBlack"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:notoTextStyle="regular" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>