<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/white">

        <FrameLayout
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_name"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tool" />


        <com.thustop_00.widgets.NotoEditText
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="15dp"
            android:id="@+id/etName"
            android:paddingBottom="15dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textColorHint="#979797"
            android:hint="@string/etv_name"
            android:background="@drawable/edittext_login"
            android:imeOptions="actionDone"
            />

        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_idnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_id_num"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etName" />

        <com.thustop_00.widgets.NotoEditText
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_idnum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="15dp"
            android:id="@+id/et_idnum"
            android:paddingBottom="15dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColorHint="#979797"
            android:background="@drawable/edittext_login"
            />

        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_pass"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_idnum" />


        <com.thustop_00.widgets.NotoEditText
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="15dp"
            android:id="@+id/et_Pass"
            android:paddingBottom="15dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColorHint="#979797"
            android:hint="@string/etv_password"
            android:background="@drawable/edittext_login"
            />

        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_check_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_pass_check"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_Pass" />

        <com.thustop_00.widgets.NotoEditText
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_check_pass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="15dp"
            android:id="@+id/et_check_Pass"
            android:paddingBottom="15dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColorHint="#979797"
            android:hint="@string/etv_pass_check"
            android:background="@drawable/edittext_login"
            />

        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_phone_num"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_check_Pass" />

        <RelativeLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <com.thustop_00.widgets.NotoEditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="15dp"
                android:id="@+id/et_phone_num"
                android:paddingBottom="15dp"
                android:textSize="10sp"
                android:textColorHint="#979797"
                android:hint="@string/etv_phone_num"
                android:background="@drawable/edittext_login"
                />

            <com.thustop_00.widgets.NotoButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/send_message"
                android:layout_toRightOf="@id/et_phone_num"
                android:layout_marginStart="5dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/edittext_login"
                android:text="@string/bt_send_message"
                android:textSize="14sp"
                android:textColor="#979797"
                />

        </RelativeLayout>

        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_check_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_phone_num"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_phone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_check_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <com.thustop_00.widgets.NotoEditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="15dp"
                android:id="@+id/et_check_num"
                android:paddingBottom="15dp"
                android:textSize="10sp"
                android:textColorHint="#979797"
                android:hint="                                                                             "
                android:background="@drawable/edittext_login"
                />

            <com.thustop_00.widgets.NotoButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_ok"
                android:layout_toRightOf="@id/et_check_num"
                android:layout_marginStart="5dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/edittext_login"
                android:text="@string/bt_check_ok"
                android:textColor="#979797"
                />

        </RelativeLayout>



        <com.thustop_00.widgets.NotoButton
            android:id="@+id/bt_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="확인"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/button_round_green"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>