<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_intro_page3"
            android:layout_width="303dp"
            android:layout_height="160dp"
            android:layout_marginTop="112dp"
            android:text="@string/tv_intro_page3"
            android:textColor="#423f3f"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_intro_page3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_intro_page3"
            app:srcCompat="@drawable/img_intro3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
