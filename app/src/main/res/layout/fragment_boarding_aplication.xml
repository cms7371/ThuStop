<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/toolbar_height" />

    <com.thustop_00.widgets.NotoTextView
        android:id="@+id/tv_fba_progress1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/bg_round12_green"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/White"
        android:textSize="9sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_fba_progress2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:notoTextStyle="bold" />

    <com.thustop_00.widgets.NotoTextView
        android:id="@+id/tv_fba_progress2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/bg_round12_graycf"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/White"
        android:textSize="9sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_fba_progress3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_fba_progress1"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:notoTextStyle="bold" />

    <com.thustop_00.widgets.NotoTextView
        android:id="@+id/tv_fba_progress3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_round12_graycf"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/White"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_fba_progress2"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:notoTextStyle="bold" />

    <ImageView
        android:id="@+id/iv_fba_left_dots"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fba_progress1"
        app:layout_constraintEnd_toStartOf="@+id/tv_fba_progress2"
        app:layout_constraintStart_toEndOf="@+id/tv_fba_progress1"
        app:layout_constraintTop_toTopOf="@+id/tv_fba_progress1"
        app:srcCompat="@drawable/icon_3dots_gray" />

    <ImageView
        android:id="@+id/iv_fba_left_dots2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fba_progress2"
        app:layout_constraintEnd_toStartOf="@+id/tv_fba_progress3"
        app:layout_constraintStart_toEndOf="@+id/tv_fba_progress2"
        app:layout_constraintTop_toTopOf="@+id/tv_fba_progress2"
        app:srcCompat="@drawable/icon_3dots_gray" />

    <com.thustop_00.widgets.NotoTextView
        android:id="@+id/tv_fba_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="탑승하실 정거장을 선택해주세요"
        android:textColor="@color/TextBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fba_progress2"
        app:notoTextStyle="medium" />

    <com.thustop_00.widgets.NotoTextView
        android:id="@+id/tv_fba_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="회원님과 가장 가까운 위치의 정거장을 선택해주세요"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fba_big" />

    <com.thustop_00.widgets.NotoTextView
        android:id="@+id/tv_fba_stage"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/bg_round25_green"
        android:gravity="center"
        android:text="출발"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fba_small"
        app:notoTextStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fba_stop_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fba_stage" />
</androidx.constraintlayout.widget.ConstraintLayout>