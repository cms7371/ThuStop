<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="NavPersonalHistoryTicketFrag"
            type="com.thustop_00.NavPersonalHistoryTicketFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_ticket"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_marginTop="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.thustop_00.widgets.NotoTextView
        android:id="@+id/tv_title_left_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="남은횟수"
        android:textSize="14sp"
        app:notoTextStyle="medium"
        android:textColor="@color/TextGray"
        app:layout_constraintTop_toTopOf="@id/line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/line1"/>
        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_left_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="-"
            android:textSize="12sp"
            android:textColor="@color/Accent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_left_ticket"
            app:layout_constraintBottom_toBottomOf="@id/line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/line1"/>
        <View
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="46dp"
            android:layout_marginTop="13dp"
            android:background="#f3f3f3"
            app:layout_constraintTop_toBottomOf="@id/vp_ticket"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_title_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="티켓 만료일"
            android:textSize="14sp"
            app:notoTextStyle="medium"
            android:textColor="@color/TextGray"
            app:layout_constraintTop_toTopOf="@id/line1"
            app:layout_constraintStart_toEndOf="@id/line1"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.thustop_00.widgets.NotoTextView
            android:id="@+id/tv_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="-"
            android:textSize="12sp"
            android:textColor="@color/Accent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_due_date"
            app:layout_constraintBottom_toBottomOf="@id/line1"
            app:layout_constraintStart_toEndOf="@id/line1"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="11dp"
            android:background="#f3f3f3"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
            

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>